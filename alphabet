void text(String input, int renderTime)
{
  for(int i=0; i<input.length(); i++)
  {
    char ch = input.charAt(i);
    if(isAlpha(ch))
    {
      displayText(ch, renderTime);
    }
  }
}

void displayText(char ch, int renderTime)
{
  switch(tolower(ch))
  {
    case 'a':
      a(renderTime,0);
      break;
    case 'b':
      b(renderTime,0);
      break;
    case 'c':
      c(renderTime,0);
      break;
    case 'd':
      d(renderTime,0);
      break;
    case 'e':
      e(renderTime,0);
      break;
    case 'f':
      f(renderTime,0);
      break;
    case 'g':
      g(renderTime,0);
      break;
    case 'h':
      h(renderTime,0);
      break;
    case 'i':
      i(renderTime,0);
      break;
    case 'j':
      j(renderTime,0);
      break;
    case 'k':
      k(renderTime,0);
      break;
    case 'l':
      l(renderTime,0);
      break;
    case 'm':
      m(renderTime,0);
      break;
    case 'n':
      n(renderTime,0);
      break;
    case 'o':
      o(renderTime,0);
      break;
    case 'p':
      p(renderTime,0);
      break;
    case 'q':
      q(renderTime,0);
      break;
    case 'r':
      r(renderTime,0);
      break;
    case 's':
      s(renderTime,0);
      break;
    case 't':
      t(renderTime,0);
      break;
    case 'u':
      u(renderTime,0);
      break;
    case 'v':
      v(renderTime,0);
      break;
    case 'w':
      w(renderTime,0);
      break;
    case 'x':
      x(renderTime,0);
      break;
    case 'y':
      y(renderTime,0);
      break;
    case 'z':
      z(renderTime,0);
      break;
  }
}

void loop() {
  for(int i=7; i>=0; i--)
  {
    a(100,i);
    clearCube();
  }
  a(100,0);
  a(100,0);
  a(100,0);
  a(100,0);
  clearCube();
}

void updateShiftRegister() {
  digitalWrite(RCLK, LOW);
  for(int i=0; i<8; i++)
  {
    shiftOut(SER, SRCLK, LSBFIRST, rows[i]);
  }
  digitalWrite(RCLK, HIGH);

  digitalWrite(RCLK2, LOW);
  shiftOut(SER2, SRCLK2, LSBFIRST, layers);
  digitalWrite(RCLK2, HIGH);
}
